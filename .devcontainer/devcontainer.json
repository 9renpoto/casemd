{
	"name": "Go CLI Environment",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"moby": true,
			"installDockerBuildx": true,
			"version": "latest"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go",
				"streetsidesoftware.code-spell-checker",
				"esbenp.prettier-vscode",
				"dbaeumer.vscode-eslint",
				"ms-azuretools.vscode-docker"
			]
		}
	},
	"forwardPorts": [
		3000
	],
	"postCreateCommand": "lefthook install",
	"postStartCommand": "bash -lc 'pkill -f \"casemd serve\" || true; CASEMD_WEB_ADDR=0.0.0.0:3000 nohup go run ./cmd/casemd serve > /tmp/casemd-web.log 2>&1 &'",
	"remoteUser": "vscode"
}
